{% extends '::base.html.twig' %}
{% form_theme form 'MopaBootstrapBundle:Form:fields.html.twig' %}

{% block body %}

<h2>Label <small>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</small></h2>
<hr/>

<form class="form-horizontal" action="{{ path('label_new', {'template' : label.template}) }}" method="post" {{ form_enctype(form) }}>

    <div class="row-fluid">
        <div class="span5">
            <h6>Configuration</h6>
            <div class="well">
                {{ form_widget(form) }}
            </div>
        </div>

        <div class="span7">
            <h6>Preview</h6>
            <div class="well">
                {% include 'DytWebsiteBundle:Label:template/' ~ label.template ~ '.html.twig' %}
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="form-actions">
            <input type="submit" class="btn btn-primary" name="save" value="Save">
        </div>
    </div>

</form>

<div class="modal fade" id="myModal"></div>

{% endblock %}

{% block inline_javascripts %}

<script>
$(function(){
    $("a[data-toggle=modal]").click(function (e) {
        e.preventDefault();
        var target = $(this).attr('data-target');
        var url = $(this).attr('href');
        $(target).load(url);
    })
});
</script>
{% endblock %}

