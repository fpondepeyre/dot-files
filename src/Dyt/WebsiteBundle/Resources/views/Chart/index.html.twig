{% extends '::base.html.twig' %}

{% block body %}
<div id="container" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
{% endblock %}

{% block include_javascripts %}
<script src="{{ asset('bundles/dytwebsite/js/highcharts.js') }}" type="text/javascript"></script>
{% endblock %}

{% block inline_javascripts %}
<script type="text/javascript">
    $(function () {
        var chart;
        $(document).ready(function() {
            chart = new Highcharts.Chart({
                chart: {
                    renderTo: 'container',
                    type: 'column',
                    width: 600
                },
                credits : { enabled : false},
                title: {{schoolName|raw}},
                subtitle: {{schoolYear|raw}},
                xAxis: {{categories|raw}},
                yAxis: {
                    min: 0,
                    title: {
                        text: "Nombre d'élèves"
                    }
                },
                legend: {
                    layout: 'vertical',
                    backgroundColor: '#FFFFFF',
                    align: 'left',
                    verticalAlign: 'top',
                    x: 100,
                    y: 70,
                    floating: true,
                    shadow: true
                },
                tooltip: {
                    formatter: function() {
                        return '' + this.x + ': ' + this.y + ' ' + this.series.name;
                    }
                },
                plotOptions: {
                    column: {
                        pointPadding: 0.2,
                        borderWidth: 0
                    }
                },
                series: [{{boys|raw}}, {{girls|raw}}]
            });
        });
    });
</script>
{% endblock %}
